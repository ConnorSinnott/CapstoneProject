<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_food_details_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/not_yet_implemented"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_food_details_subtract"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"/>

        <EditText
            android:id="@+id/dialog_food_details_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <Button
            android:id="@+id/dialog_food_details_add"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"/>

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/dialog_food_details_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="12dp"
                android:text="@string/retrieving_data"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TableLayout
            android:id="@+id/dialog_food_details_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="0">

            <TableRow>

                <TextView android:text="Calories"/>

                <TextView
                    android:id="@+id/dialog_food_details_calories"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

            <TableRow>

                <TextView android:text="Protein"/>

                <TextView
                    android:id="@+id/dialog_food_details_protein"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

            <TableRow>

                <TextView android:text="Fat"/>

                <TextView
                    android:id="@+id/dialog_food_details_fat"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

            <TableRow>

                <TextView android:text="Carbs"/>

                <TextView
                    android:id="@+id/dialog_food_details_carbs"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

            <TableRow>

                <TextView android:text="Fiber"/>

                <TextView
                    android:id="@+id/dialog_food_details_fiber"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

            <TableRow>

                <TextView android:text="Saturated Fat"/>

                <TextView
                    android:id="@+id/dialog_food_details_satfat"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

            <TableRow>

                <TextView android:text="Monounsaturated Fat"/>

                <TextView
                    android:id="@+id/dialog_food_details_monofat"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

            <TableRow>

                <TextView android:text="Polyunsaturated Fats"/>

                <TextView
                    android:id="@+id/dialog_food_details_polyfat"
                    android:text="@string/not_yet_implemented"/>
            </TableRow>

            <TableRow>

                <TextView android:text="Cholesterol"/>

                <TextView
                    android:id="@+id/dialog_food_details_cholesterol"
                    android:text="@string/not_yet_implemented"/>

            </TableRow>

        </TableLayout>

    </ViewFlipper>

    <Button
        android:id="@+id/dialog_food_details_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/not_yet_implemented"/>

    <Button
        android:id="@+id/dialog_food_details_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>


</LinearLayout>